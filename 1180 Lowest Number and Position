#include <iostream>
 
using namespace std;
 
int main()
{
    int n, i ,aux = 1000, pos = 0;
    
    cin >> n;
    
    int N[n];
    
    for(i = 0; i < n; i++)
    {
            cin >> N[i];
            if(N[i] < aux)
            {
                     aux = N[i];
                     pos = i;
            }
    }
    
    cout << "Menor valor: " << aux << "\n";
    cout << "Posicao: " << pos << "\n";    
}
